layout: "layout-team-overview.njk"
title: "Our Team"
description: "Members of the EBMPP Section"
permalink: "/team/"
---

{% for member in collections.allTeamMembers %}
<div class="col mb-4 h-100">
    <div class="bg-blue-fade rounded person-div" style="padding: 1rem;">
        <div class="mb-3 hide-mobile">
            <a href="{{member.url}}"><img src="{{member.data.photo}}" alt="{{member.data.member}}" style="width: 100%; border: 1px solid lightgray;" class="rounded"></a>
        </div>
        <a class="lead mb-0 signika fw-semibold" style="line-height: 1.15;" href={{member.url}}>{{member.data.member}}</a>
        <p class="mb-0" style="font-size: 12px;">{{member.data.title}}</p>
        <p class="mb-0" style="font-size: 12px;"><a href="mailto:{{member.data.mail}}">{{member.data.mail}}</a></p>
    </div>
</div>
{% endfor %}