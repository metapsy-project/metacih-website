        <!-- Specific elements to translate -->
        <script>
            // Function to change the language and update the flag icon
            function switchLanguage(lang) {
                
                // Update text content
                document.getElementById('about-us').textContent = translations[lang].aboutUs;
                document.getElementById('about-us-text').innerHTML = translations[lang].aboutUsText;
            
                // Update flag
                iconSwitcher(lang);
            }
        </script>
        <!-- Tooltip JS -->
        <script>
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
