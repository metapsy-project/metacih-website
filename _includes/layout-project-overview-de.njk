            <!-- Header-->
            <header class="bg-white" style="padding-top: 5rem !important;">
                <div class="container">
                    <div class="row">
                        <!-- First column-->
                        <div class="col bg-blue-fade rounded mx-3 my-1" style="padding: 2rem; position: relative;">
                            <div class="text-center text-xl-start">
                                <h1 class="display-5 fw-bolder mb-2 blue signika">{{title}}</h1><hr>
                                <p class="lead fw-normal mb-0" style="max-width: 1000px;">{{description}}</p>
                            </div>
                                                        <div class="hide-mobile" style="position: absolute; top: 18px; right: 32px; z-index: 10;">
                                <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Themengebiet
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#" data-value="project-entry">Alle Themen</a>
                                    <a class="dropdown-item" href="#" data-value="Systematic">Systematic Review</a>
                                    <a class="dropdown-item" href="#" data-value="Methodology">Methodik</a>
                                    <a class="dropdown-item" href="#" data-value="Guidelines">Leitlinien</a>
                                    <a class="dropdown-item" href="#" data-value="Applications">Applikationen</a>
                                    <a class="dropdown-item" href="#" data-value="Other">Andere Themen</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- projects members-->
            <div class="py-4 bg-white" id="projects">
                <div class="container mb-5">
                    <div class="row">
                        <div class="col">
                            <div class="row  row-cols-1 row-cols-md-5">
                                {{content | safe}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- Footer-->
        <footer class="bg-blue-fade py-4">
            <div class="container">
                <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                    <div class="col-auto"><div class="small m-0 text-white">&copy; <span id="insert-year"></span> Section Evidence-Based Medicine in Psychiatry & Psychotherapy (EBMPP)</div>
                    <script>
                        document.getElementById('insert-year').innerHTML = new Date().getFullYear();
                    </script>
                </div>
                    <div class="col-auto">
                        <a class="link-light small" href="/imprint/">Imprint</a>
                        <span class="text-white mx-1">&middot;</span>
                        <a href="https://www.tum.de"><img src="/assets/tum_white.png" height="20px" alt=""></a>
                        <span class="text-white mx-1">&middot;</span>
                        <a href="https://www.mri.tum.de/"><img src="/assets/mri_white.png" height="20px" alt=""></a>
                    </div>
                </div>
            </div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <!--<script src="/js/scripts.js"></script>-->
        <!-- Bootstrap JS and dependencies -->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <!-- Filter topics -->
        <script>
            // JavaScript to handle dropdown selection
            document.querySelectorAll('.dropdown-item').forEach(item => {
                item.addEventListener('click', function (e) {
                    e.preventDefault();
                    const selectedText = this.textContent;
                    const selectedValue = this.getAttribute('data-value');

                    // Display the selected option
                    document.getElementById('dropdownMenuButton').textContent = selectedText;

                    // Hide all
                    document.querySelectorAll('.project-entry').forEach(element => {
                        element.style.display = 'none';
                    });

                    // Unhide 
                    document.querySelectorAll(`.${selectedValue}`).forEach(element => {
                        element.style.display = 'block'; 
                    });
                });
            });
        </script>
        <!-- Script for language switch -->
        <script>
            window.onload = function() {
              if(sessionStorage.getItem('language')===null) {
                const newPath = `/projects/`;
                window.location.assign(newPath);
              } else if (sessionStorage.getItem('language')==='en') {
                const newPath = `/projects/`;
                window.location.assign(newPath);
              } else {
              }
            };
            switchLanguageBtn = function() {
              const newPath = `/projects/`;
              sessionStorage.setItem('language', 'en');
              window.location.assign(newPath);
            }
        </script>
        <!-- Tooltip JS -->
        <script>
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        </script>
    </body>
</html>
